# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# Binance API Configuration
# =============================================================================
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true  # Set to false for production

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=futures_db
POSTGRES_USER=futures_user
POSTGRES_PASSWORD=changeme_strong_password_here

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis Connection Pool
REDIS_POOL_SIZE=50

# =============================================================================
# Data Collection Configuration
# =============================================================================
# Comma-separated list of symbols
COLLECTION_SYMBOLS=SOL/USDT,BTC/USDT,ETH/USDT

# Timeframes for OHLCV collection
COLLECTION_TIMEFRAMES=5m,15m,1h,4h,1d

# Open Interest periods
COLLECTION_OI_PERIODS=5m,15m,1h

# Historical data collection (days)
COLLECTION_HISTORICAL_DAYS=180

# =============================================================================
# Performance Configuration
# =============================================================================
# Number of symbols to process concurrently
CONCURRENT_SYMBOLS=5

# API rate limit (requests per minute)
API_RATE_LIMIT=1200

# WebSocket batch size
WS_BATCH_SIZE=10

# WebSocket batch interval (seconds)
WS_BATCH_INTERVAL=0.1

# =============================================================================
# Error Handling Configuration
# =============================================================================
# Circuit breaker failure threshold
CIRCUIT_BREAKER_THRESHOLD=10

# Circuit breaker recovery timeout (seconds)
CIRCUIT_BREAKER_TIMEOUT=120

# Error alert threshold
ERROR_ALERT_THRESHOLD=10

# Error alert cooldown (seconds)
ERROR_ALERT_COOLDOWN=300

# Maximum retry attempts
MAX_RETRIES=5

# Initial retry delay (seconds)
RETRY_INITIAL_DELAY=2.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/data_collection.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
# Grafana
GRAFANA_PASSWORD=admin

# =============================================================================
# Security & Compliance
# =============================================================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# Enable audit logging
ENABLE_AUDIT_LOG=true

# =============================================================================
# Deployment Configuration
# =============================================================================
ENVIRONMENT=development  # development, staging, production

# Timezone
TZ=UTC

# =============================================================================
# Alert Notifications (Optional - configure as needed)
# =============================================================================
# Slack
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@example.com
SMTP_TO=admin@example.com

# PagerDuty
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_KEY=

# =============================================================================
# Advanced Configuration
# =============================================================================
# Enable performance profiling
ENABLE_PROFILING=false

# Enable debug mode (DO NOT use in production)
DEBUG_MODE=false

# Data retention policy (days)
DATA_RETENTION_DAYS=365

# Enable data compression
ENABLE_COMPRESSION=true
